{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "noUnusedParameters": false
  },
  "exclude": [
    //
    "public",
    "node_modules",
    "dist",
    "scripts",
    "index.js"
  ]
}
